<!-- Pages/TranslatePage.xaml -->
<Page
    x:Class="TranslatorApp.Pages.TranslatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Padding="24" x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 上方语言切换 -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
            <ComboBox x:Name="InputLangCombo" Width="160"/>
            <Button Content="⇄" Click="SwapLanguages_Click"/>
            <ComboBox x:Name="OutputLangCombo" Width="160"/>
        </StackPanel>

        <!-- 中部双文本框 -->
        <Grid Grid.Row="1" ColumnSpacing="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- 左：输入 -->
            <Grid Grid.Column="0">
                <TextBox x:Name="InputText" AcceptsReturn="True" TextWrapping="Wrap" VerticalAlignment="Stretch"/>
                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Orientation="Horizontal" Spacing="8" Margin="0,0,8,8">
                    <Button Content="🎤" Click="SpeechInput_Click"/>
                    <Button Content="🖹 OCR" Click="OcrInput_Click"/>
                    <Button Content="⎘ 复制" Click="CopyInput_Click"/>
                </StackPanel>
            </Grid>

            <!-- 右：输出 -->
            <Grid Grid.Column="1">
                <TextBox x:Name="OutputText" AcceptsReturn="True" TextWrapping="Wrap" IsReadOnly="True" VerticalAlignment="Stretch"/>
                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Orientation="Horizontal" Spacing="8" Margin="0,0,8,8">
                    <Button Content="🔊 朗读" Click="SpeakOutput_Click"/>
                    <Button Content="★ 收藏" Click="FavoriteOutput_Click" Style="{StaticResource AccentButtonStyle}"/>
                    <Button Content="⎘ 复制" Click="CopyOutput_Click"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- 下方：引擎选择 + 翻译 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12">
            <ComboBox x:Name="ProviderCombo" Width="240"/>
            <Button x:Name="TranslateButton" Content="翻译" Click="TranslateButton_Click" Style="{StaticResource AccentButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>