<Page
    x:Class="TranslatorApp.Pages.WordLookupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>

        <!-- Skeleton 闪光动画 -->
        <Storyboard x:Name="ShimmerStoryboard" RepeatBehavior="Forever">
            <DoubleAnimation
            Storyboard.TargetName="ShimmerTranslate"
            Storyboard.TargetProperty="X"
            From="-600"
            To="600"
            Duration="0:0:1.4" />
        </Storyboard>

        <!-- Skeleton 底色（直接用 ThemeResource，不要中转 StaticResource） -->
        <SolidColorBrush x:Key="SkeletonBaseBrush"
                     Color="{ThemeResource SystemControlBackgroundBaseLowBrush}" />

        <!-- Skeleton Shimmer 高光 -->
        <LinearGradientBrush x:Key="SkeletonShimmerBrush"
                         StartPoint="0,0"
                         EndPoint="1,0">
            <GradientStop Color="Transparent" Offset="0.0" />
            <GradientStop Color="#40FFFFFF" Offset="0.45" />
            <GradientStop Color="#80FFFFFF" Offset="0.5" />
            <GradientStop Color="#40FFFFFF" Offset="0.55" />
            <GradientStop Color="Transparent" Offset="1.0" />
        </LinearGradientBrush>

    </Page.Resources>

    <Grid>

        <!-- 每日一句容器 -->
        <Grid x:Name="DailySentenceContainer">

            <!-- 背景 -->
            <Grid>
                <Image x:Name="BackgroundImage"
                       Stretch="UniformToFill"
                       Opacity="0.4" />

                <Border IsHitTestVisible="False">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="0.4"/>
                            <GradientStop Color="Transparent" Offset="0.6"/>
                            <GradientStop Color="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Grid>

            <!-- ================= Skeleton Layer ================= -->
            <Grid x:Name="SkeletonLayer" Visibility="Visible">

                <ScrollViewer>
                    <StackPanel MaxWidth="900"
                                Margin="48,80,48,48"
                                Spacing="24"
                                HorizontalAlignment="Center">

                        <!-- 标题骨架 -->
                        <Rectangle Height="42" Width="320" RadiusX="10" RadiusY="10"
                                   Fill="{StaticResource SkeletonBaseBrush}" />

                        <Rectangle Height="20" Width="220" RadiusX="8" RadiusY="8"
                                   Fill="{StaticResource SkeletonBaseBrush}" />

                        <!-- 英文卡片骨架 -->
                        <Border CornerRadius="20"
                                Padding="40,32"
                                Background="{StaticResource SkeletonBaseBrush}">
                            <StackPanel Spacing="20">
                                <Rectangle Height="20" Width="120" RadiusX="6" RadiusY="6"
                                           Fill="{StaticResource SkeletonBaseBrush}" />
                                <Rectangle Height="28" RadiusX="8" RadiusY="8"
                                           Fill="{StaticResource SkeletonBaseBrush}" />
                                <Rectangle Height="28" RadiusX="8" RadiusY="8"
                                           Fill="{StaticResource SkeletonBaseBrush}" />
                            </StackPanel>
                        </Border>

                        <!-- 中文卡片骨架 -->
                        <Border CornerRadius="20"
                                Padding="40,32"
                                Background="{StaticResource SkeletonBaseBrush}">
                            <StackPanel Spacing="16">
                                <Rectangle Height="18" Width="100" RadiusX="6" RadiusY="6"
                                           Fill="{StaticResource SkeletonBaseBrush}" />
                                <Rectangle Height="26" RadiusX="8" RadiusY="8"
                                           Fill="{StaticResource SkeletonBaseBrush}" />
                                <Rectangle Height="26" RadiusX="8" RadiusY="8"
                                           Fill="{StaticResource SkeletonBaseBrush}" />
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>

                <!-- Shimmer 覆盖层 -->
                <Rectangle IsHitTestVisible="False"
                           Opacity="0.9">
                    <Rectangle.Fill>
                        <StaticResource ResourceKey="SkeletonShimmerBrush"/>
                    </Rectangle.Fill>
                    <Rectangle.RenderTransform>
                        <TranslateTransform x:Name="ShimmerTranslate" X="-600"/>
                    </Rectangle.RenderTransform>
                </Rectangle>

            </Grid>
            <!-- 内容层 -->
            <ScrollViewer x:Name="ContentLayer" 
                          Visibility="Collapsed"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel MaxWidth="900" 
                            Margin="48,80,48,48" 
                            Spacing="32"
                            HorizontalAlignment="Center">

                    <!-- 头部：标题和日期 -->
                    <StackPanel Spacing="16" HorizontalAlignment="Center">
                        <TextBlock x:Name="TxtCaption" 
                                   Text="Daily Sentence"
                                   FontSize="42" 
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                        <Button Style="{ThemeResource AccentButtonStyle}"
        CornerRadius="16"
        Padding="16,8"
        HorizontalAlignment="Center"
        IsHitTestVisible="False">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <FontIcon Glyph="&#xE8BF;" FontSize="16"/>
                                <TextBlock x:Name="TxtDate"
                   Text="2024-12-21"
                   FontSize="14"
                   FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- 英文句子卡片 -->
                    <Border Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="20"
                            Padding="40,32">
                        <StackPanel Spacing="20">
                            <Grid>
                                <TextBlock Text="ENGLISH" 
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Opacity="0.6"
                                           VerticalAlignment="Center"/>

                                <Button x:Name="BtnPlayTts" 
                                        Click="BtnPlayTts_Click"
                                        Width="48" Height="48"
                                        CornerRadius="24"
                                        HorizontalAlignment="Right"
                                        Style="{ThemeResource AccentButtonStyle}"
                                        BorderThickness="0"
                                        ToolTipService.ToolTip="播放发音">
                                    <FontIcon Glyph="&#xE768;" 
                                              FontSize="18"/>
                                </Button>
                            </Grid>

                            <TextBlock x:Name="TxtEn" 
                                       Text="Loading..."
                                       FontSize="24"
                                       FontWeight="Medium"
                                       TextWrapping="Wrap"
                                       LineHeight="40"
                                       TextAlignment="Center"
                                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- 中文翻译卡片 -->
                    <Border Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="20"
                            Padding="40,32">
                        <StackPanel Spacing="16">
                            <TextBlock Text="中文翻译" 
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Opacity="0.6"
                                       TextAlignment="Left"/>

                            <TextBlock x:Name="TxtZh" 
                                       Text="加载中..."
                                       FontSize="20"
                                       TextWrapping="Wrap"
                                       LineHeight="36"
                                       TextAlignment="Center"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- 底部操作栏 -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Spacing="16"
                                Margin="0,24,0,0">
                        <Button Click="RefreshDailySentence_Click"
                                Style="{ThemeResource AccentButtonStyle}"
                                CornerRadius="12"
                                Padding="24,12">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <FontIcon Glyph="&#xE72C;" FontSize="16"/>
                                <TextBlock Text="刷新" FontSize="15"/>
                            </StackPanel>
                        </Button>

                        <Button Click="ShareSentence_Click"
                                CornerRadius="12"
                                Padding="24,12">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <FontIcon Glyph="&#xE72D;" FontSize="16"/>
                                <TextBlock Text="分享" FontSize="15"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- WebView 全屏查词 -->
        <Grid x:Name="WebViewContainer" Visibility="Collapsed">
            <!-- 加载遮罩 -->
            <Border x:Name="WebMask" 
                    Background="{ThemeResource SolidBackgroundFillColorBaseBrush}" 
                    Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Spacing="20">
                    <muxc:ProgressRing IsActive="True" 
                                       Width="56" Height="56"/>
                    <TextBlock Text="加载中..." 
                               FontSize="16"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Border>

            <!-- WebView -->
            <muxc:WebView2 x:Name="Web" 
                           NavigationCompleted="Web_NavigationCompleted"/>

            <!-- 本地词典 -->
            <Grid x:Name="LocalDictionaryHost" 
                  Visibility="Collapsed" 
                  Background="{ThemeResource SolidBackgroundFillColorBaseBrush}">
                <ScrollViewer Padding="64,48">
                    <StackPanel Spacing="32" MaxWidth="900">
                        <TextBlock x:Name="LocalWordText" 
                                   FontSize="48"
                                   FontWeight="Bold"/>

                        <StackPanel Spacing="12">
                            <TextBlock x:Name="LocalPronunciation" 
                                       FontSize="24"
                                       Foreground="{ThemeResource SystemAccentColor}"/>
                            <TextBlock x:Name="LocalPartOfSpeech" 
                                       FontSize="18"
                                       FontStyle="Italic"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>

                        <ItemsControl x:Name="LocalDefinitions"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <!-- 收藏按钮 -->
            <Button x:Name="FabFavorite"
                    Click="FabFavorite_Click"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom"
                    Width="64" Height="64" 
                    CornerRadius="32"
                    Visibility="Collapsed"
                    Margin="0,0,40,40"
                    Style="{ThemeResource AccentButtonStyle}"
                    BorderThickness="0"
                    ToolTipService.ToolTip="收藏此词">
                <FontIcon Glyph="&#xE734;" FontSize="22"/>
            </Button>
        </Grid>
        <!-- 图片操作按钮 -->
        <Button Click="SaveImage_Click" x:Name="SaveImageButton" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="24" Width="48" Height="48" CornerRadius="24" Style="{ThemeResource AccentButtonStyle}" BorderThickness="0" ToolTipService.ToolTip="保存图片">
            <FontIcon Glyph="&#xE74E;" FontSize="18"/>
        </Button>
    </Grid>
</Page>
