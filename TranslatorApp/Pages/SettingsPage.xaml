<Page
    x:Class="TranslatorApp.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls">

    <Grid>
        <ScrollViewer>
            <StackPanel Spacing="20" Padding="20" HorizontalAlignment="Stretch">

                <TextBlock Text="外观" FontSize="20" FontWeight="Bold" Margin="0,0,0,8"/>

                <controls:Expander IsExpanded="False"
                                   HorizontalAlignment="Stretch"
                                   HorizontalContentAlignment="Left"
                                   MinHeight="80">
                    <controls:Expander.Header>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE771;" FontSize="20"/>
                            <StackPanel>
                                <TextBlock Text="主题设置" FontSize="16" FontWeight="Bold"/>
                                <TextBlock Text="选择应用的显示主题" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                        </StackPanel>
                    </controls:Expander.Header>
                    <controls:RadioButtons x:Name="RbTheme"
                                           SelectionChanged="RbTheme_SelectionChanged"
                                           HorizontalAlignment="Left"
                                           HorizontalContentAlignment="Left">
                        <RadioButton Content="跟随系统" Tag="Default"/>
                        <RadioButton Content="浅色" Tag="Light"/>
                        <RadioButton Content="深色" Tag="Dark"/>
                    </controls:RadioButtons>
                </controls:Expander>

                <controls:Expander IsExpanded="False"
                                   HorizontalAlignment="Stretch"
                                   HorizontalContentAlignment="Left"
                                   MinHeight="80">
                    <controls:Expander.Header>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE790;" FontSize="20"/>
                            <StackPanel>
                                <TextBlock Text="背景材质" FontSize="16" FontWeight="Bold"/>
                                <TextBlock Text="选择窗口背景效果" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                        </StackPanel>
                    </controls:Expander.Header>
                    <controls:RadioButtons x:Name="RbBackdrop"
                                           SelectionChanged="RbBackdrop_SelectionChanged"
                                           HorizontalAlignment="Left"
                                           HorizontalContentAlignment="Left">
                        <RadioButton Content="无背景" Tag="None"/>
                        <RadioButton Content="云母" Tag="Mica"/>
                        <RadioButton Content="亚克力" Tag="Acrylic"/>
                    </controls:RadioButtons>
                </controls:Expander>

                <StackPanel Margin="0,20,0,8">
                    <TextBlock Text="API 密钥" FontSize="20" FontWeight="Bold"/>
                    <HyperlinkButton Content="如何获取 API 密钥？" 
                                     FontSize="12" 
                                     HorizontalAlignment="Left"
                                     Click="HowToGetApi_Click"/>
                </StackPanel>

                <controls:Expander IsExpanded="False"
                                   HorizontalAlignment="Stretch"
                                   HorizontalContentAlignment="Left"
                                   MinHeight="80">
                    <controls:Expander.Header>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE943;" FontSize="20"/>
                            <StackPanel>
                                <TextBlock Text="Bing API Key" FontSize="16" FontWeight="Bold"/>
                                <TextBlock Text="输入 Bing AppId 和 SecretKey" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                        </StackPanel>
                    </controls:Expander.Header>
                    <StackPanel Spacing="8" HorizontalAlignment="Left">
                        <TextBox x:Name="TbBingAppId" PlaceholderText="Bing AppId"
                                 Width="300" HorizontalAlignment="Left"/>
                        <TextBox x:Name="TbBingSecret" PlaceholderText="Bing SecretKey"
                                 Width="300" HorizontalAlignment="Left"/>
                        <Button Content="保存" Click="SaveBing_Click" HorizontalAlignment="Left"/>
                    </StackPanel>
                </controls:Expander>

                <controls:Expander IsExpanded="False"
                                   HorizontalAlignment="Stretch"
                                   HorizontalContentAlignment="Left"
                                   MinHeight="80">
                    <controls:Expander.Header>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE8FD;" FontSize="20"/>
                            <StackPanel>
                                <TextBlock Text="百度 API Key" FontSize="16" FontWeight="Bold"/>
                                <TextBlock Text="输入 Baidu AppId 和 SecretKey" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                        </StackPanel>
                    </controls:Expander.Header>
                    <StackPanel Spacing="8" HorizontalAlignment="Left">
                        <TextBox x:Name="TbBaiduAppId" PlaceholderText="Baidu AppId"
                                 Width="300" HorizontalAlignment="Left"/>
                        <TextBox x:Name="TbBaiduSecret" PlaceholderText="Baidu SecretKey"
                                 Width="300" HorizontalAlignment="Left"/>
                        <Button Content="保存" Click="SaveBaidu_Click" HorizontalAlignment="Left"/>
                    </StackPanel>
                </controls:Expander>

                <controls:Expander IsExpanded="False"
                                   HorizontalAlignment="Stretch"
                                   HorizontalContentAlignment="Left"
                                   MinHeight="80">
                    <controls:Expander.Header>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE8D2;" FontSize="20"/>
                            <StackPanel>
                                <TextBlock Text="有道 API Key" FontSize="16" FontWeight="Bold"/>
                                <TextBlock Text="输入 Youdao AppKey 和 SecretKey" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                        </StackPanel>
                    </controls:Expander.Header>
                    <StackPanel Spacing="8" HorizontalAlignment="Left">
                        <TextBox x:Name="TbYoudaoAppKey" PlaceholderText="Youdao AppKey"
                                 Width="300" HorizontalAlignment="Left"/>
                        <TextBox x:Name="TbYoudaoSecret" PlaceholderText="Youdao SecretKey"
                                 Width="300" HorizontalAlignment="Left"/>
                        <Button Content="保存" Click="SaveYoudao_Click" HorizontalAlignment="Left"/>
                    </StackPanel>
                </controls:Expander>

                <TextBlock Text="本地词典" FontSize="20" FontWeight="Bold" Margin="0,20,0,8"/>

                <controls:Expander IsExpanded="False"
                                   HorizontalAlignment="Stretch"
                                   HorizontalContentAlignment="Stretch"
                                   MinHeight="80">
                    <controls:Expander.Header>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE8F1;" FontSize="20"/>
                            <StackPanel>
                                <TextBlock Text="专业词典下载" FontSize="16" FontWeight="Bold"/>
                                <TextBlock Text="下载雅思、专业级等专业词典资源" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                        </StackPanel>
                    </controls:Expander.Header>
                    <StackPanel x:Name="DictionaryListPanel" Orientation="Vertical" Spacing="12" Margin="0,8,0,0">
                    </StackPanel>
                </controls:Expander>

                <TextBlock Text="关于" FontSize="20" FontWeight="Bold" Margin="0,20,0,8"/>

                <controls:Expander IsExpanded="False"
                                   HorizontalAlignment="Stretch"
                                   HorizontalContentAlignment="Left"
                                   MinHeight="80">
                    <controls:Expander.Header>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Image x:Name="ImgAppIcon" Width="20" Height="20" Stretch="UniformToFill"/>
                            <StackPanel>
                                <TextBlock x:Name="TxtAppName" FontSize="18" FontWeight="Bold"/>
                                <TextBlock Text="©2025 Furry Xiyi。保留所有权利。" FontSize="12" Foreground="Gray"/>
                                <TextBlock x:Name="TxtVersion" FontSize="15"/>
                            </StackPanel>
                        </StackPanel>
                    </controls:Expander.Header>

                    <StackPanel Margin="0,8,0,0" Spacing="6">
                        <HyperlinkButton Content="加入QQ群聊"
                                         NavigateUri="https://qm.qq.com/q/Nouxacwi2W"/>
                        <HyperlinkButton Content="加入Discord群组"
                                         NavigateUri="https://discord.gg/BRYYppY2"/>
                    </StackPanel>
                </controls:Expander>

                <HyperlinkButton Content="发送反馈"
                                 NavigateUri="https://github.com/Furry-Xiyi/TranslatorApp/issues"
                                 Margin="0,20,0,0"
                                 HorizontalAlignment="Left"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
