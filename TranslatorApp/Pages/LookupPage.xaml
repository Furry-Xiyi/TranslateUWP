<!-- Pages/LookupPage.xaml -->
<Page
    x:Class="TranslatorApp.Pages.LookupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TranslatorApp.Pages">

    <Grid Padding="24" x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 每日一句卡片（未搜索时展示） -->
        <Border x:Name="DailyCard" Grid.Row="0" HorizontalAlignment="Center" MaxWidth="980" Margin="0,0,0,12" Background="White" CornerRadius="8" Padding="0">
            <StackPanel Spacing="8" Padding="12">
                <Image x:Name="DailyImage" Height="200" Stretch="UniformToFill"/>
                <TextBlock x:Name="DailyEn" FontSize="18" TextWrapping="WrapWholeWords" FontWeight="SemiBold"/>
                <TextBlock x:Name="DailyZh" FontSize="16" Opacity="0.8" TextWrapping="WrapWholeWords"/>
            </StackPanel>
        </Border>

        <!-- 搜词结果区域 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 本地词典/XAML 或 Web词典 -->
            <Pivot x:Name="ResultPivot" Grid.Column="0">
                <PivotItem Header="本地词典">
                    <ScrollViewer>
                        <StackPanel Spacing="8">
                            <TextBlock x:Name="LocalWord" FontSize="24" FontWeight="Bold"/>
                            <ItemsControl x:Name="LocalMeanings"/>
                        </StackPanel>
                    </ScrollViewer>
                </PivotItem>
                <PivotItem Header="网络词典">
                    <WebView x:Name="DictWebView"/>
                </PivotItem>
            </Pivot>

            <!-- 收藏按钮 -->
            <StackPanel Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="12">
                <Button x:Name="FavoriteButton" Click="FavoriteButton_Click" Style="{StaticResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon x:Name="FavoriteIcon" Glyph="&#xE208;"/>
                        <TextBlock Text="收藏"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>