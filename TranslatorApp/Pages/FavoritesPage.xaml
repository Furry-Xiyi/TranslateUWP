<Page
    x:Class="TranslatorApp.Pages.FavoritesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:TranslatorApp.Models"
    xmlns:local="using:TranslatorApp.Converters"
    mc:Ignorable="d">

    <Page.Resources>
        <x:Double x:Key="VS_BaseButtonSize">36</x:Double>
        <x:Double x:Key="VS_SegmentButtonSize">36</x:Double>
        <local:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
        <local:GreaterThanZeroToVisibilityConverter x:Key="GreaterThanZeroToVisibilityConverter"/>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Background" Value="#CC0000"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid x:Name="Root" Background="{TemplateBinding Background}" CornerRadius="{TemplateBinding CornerRadius}">
                            <ContentPresenter Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Target="Root.Background" Value="#FF0000"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Target="Root.Background" Value="#990000"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <VisualState.Setters>
                                            <Setter Target="Root.Background" Value="Gray"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="VS_SegmentButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="{StaticResource VS_SegmentButtonSize}"/>
            <Setter Property="Height" Value="{StaticResource VS_SegmentButtonSize}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        </Style>

        <ItemsPanelTemplate x:Key="ListItemsPanel">
            <ItemsStackPanel Orientation="Vertical"/>
        </ItemsPanelTemplate>

        <DataTemplate x:Key="ListItemTemplate" x:DataType="models:FavoriteItem">
            <Grid Padding="12,8" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Spacing="4" VerticalAlignment="Center">
                    <TextBlock Text="{x:Bind Term}" FontSize="16" FontWeight="SemiBold"/>
                    <TextBlock Text="{x:Bind AddedOn}" FontSize="12" Opacity="0.6"/>
                </StackPanel>
                <Button Grid.Column="1" Content="删除" Style="{StaticResource DangerButtonStyle}" Click="DeleteButton_Click"/>
            </Grid>
        </DataTemplate>

        <ItemsPanelTemplate x:Key="TileItemsPanel">
            <ItemsWrapGrid Orientation="Horizontal" ItemWidth="240" ItemHeight="92"/>
        </ItemsPanelTemplate>

        <DataTemplate x:Key="TileItemTemplate" x:DataType="models:FavoriteItem">
            <Border Width="232" Height="84" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="8" Padding="12" Margin="4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Spacing="4" VerticalAlignment="Center">
                        <TextBlock Text="{x:Bind Term}" FontSize="16" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{x:Bind AddedOn}" FontSize="12" Opacity="0.6"/>
                    </StackPanel>
                    <Button Grid.Column="1" Content="删除" Style="{StaticResource DangerButtonStyle}" VerticalAlignment="Center" Click="DeleteButton_Click"/>
                </Grid>
            </Border>
        </DataTemplate>

        <ItemsPanelTemplate x:Key="GridItemsPanel">
            <ItemsWrapGrid Orientation="Horizontal" ItemWidth="200" ItemHeight="180"/>
        </ItemsPanelTemplate>

        <DataTemplate x:Key="GridItemTemplate" x:DataType="models:FavoriteItem">
            <Border Width="192" Height="172" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="8" Padding="12" Margin="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="8">
                        <TextBlock Text="{x:Bind Term}" FontSize="20" FontWeight="Bold" TextAlignment="Center" TextWrapping="Wrap" MaxLines="3"/>
                        <TextBlock Text="{x:Bind AddedOn}" FontSize="12" Opacity="0.6" TextAlignment="Center"/>
                    </StackPanel>
                    <Button Grid.Row="1" Content="删除" Style="{StaticResource DangerButtonStyle}" HorizontalAlignment="Center" Click="DeleteButton_Click"/>
                </Grid>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="16" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <TextBlock Text="排序方式⇅" VerticalAlignment="Center" Opacity="0.7"/>
                <ComboBox x:Name="SortSelector" Width="140" SelectionChanged="SortSelector_SelectionChanged">
                    <ComboBoxItem Content="A-Z" Tag="NameAsc" IsSelected="True"/>
                    <ComboBoxItem Content="Z-A" Tag="NameDesc"/>
                    <ComboBoxItem Content="最新" Tag="DateNewest"/>
                    <ComboBoxItem Content="最旧" Tag="DateOldest"/>
                </ComboBox>
            </StackPanel>

            <Border Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="4" BorderThickness="1" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Rectangle x:Name="Indicator" Width="20" Height="2" VerticalAlignment="Bottom" HorizontalAlignment="Left" Fill="{ThemeResource SystemAccentColor}">
                        <Rectangle.RenderTransform>
                            <TranslateTransform x:Name="IndicatorTranslate"/>
                        </Rectangle.RenderTransform>
                    </Rectangle>

                    <Button x:Name="ListBtn" Grid.Column="0" Style="{StaticResource VS_SegmentButtonStyle}" Click="ListBtn_Click">
                        <FontIcon Glyph="&#xE179;" FontSize="14"/>
                    </Button>
                    <Button x:Name="GridBtn" Grid.Column="1" Style="{StaticResource VS_SegmentButtonStyle}" Click="GridBtn_Click">
                        <FontIcon Glyph="&#xE80A;" FontSize="14"/>
                    </Button>
                    <Button x:Name="TileBtn" Grid.Column="2" Style="{StaticResource VS_SegmentButtonStyle}" Click="TileBtn_Click">
                        <FontIcon Glyph="&#xECA5;" FontSize="14"/>
                    </Button>
                </Grid>
            </Border>
        </StackPanel>

        <TextBlock Grid.Row="1" Text="还没有收藏词汇" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.5" FontSize="18"
                   Visibility="{x:Bind Favorites.Count, Mode=OneWay, Converter={StaticResource ZeroToVisibilityConverter}}"/>

        <ListView x:Name="List" Grid.Row="1"
                  ItemsSource="{x:Bind Favorites, Mode=OneWay}"
                  ItemTemplate="{StaticResource ListItemTemplate}"
                  ItemsPanel="{StaticResource ListItemsPanel}"
                  SelectionMode="None"
                  IsItemClickEnabled="True"
                  ItemClick="List_ItemClick"
                  Visibility="{x:Bind Favorites.Count, Mode=OneWay, Converter={StaticResource GreaterThanZeroToVisibilityConverter}}">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0,2,0,2"/>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</Page>
