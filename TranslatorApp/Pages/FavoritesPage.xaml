<Page
    x:Class="TranslatorApp.Pages.FavoritesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:TranslatorApp.Models"
    xmlns:local="using:TranslatorApp.Converters"
    mc:Ignorable="d">

    <Page.Resources>
        <x:Double x:Key="VS_BaseButtonSize">36</x:Double>
        <x:Double x:Key="VS_SegmentButtonSize">36</x:Double>

        <local:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
        <local:GreaterThanZeroToVisibilityConverter x:Key="GreaterThanZeroToVisibilityConverter"/>

        <!-- 删除按钮红色样式（WinUI：VisualState 控制 Hover/Pressed） -->
        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="MinWidth" Value="84"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="Root"
                                    Background="Red"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="{TemplateBinding CornerRadius}">
                                <ContentPresenter x:Name="ContentPresenter"
                                                  Content="{TemplateBinding Content}"
                                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  Padding="{TemplateBinding Padding}"/>
                            </Border>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Target="Root.Background" Value="#CC0000"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Target="Root.Background" Value="#990000"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <VisualState.Setters>
                                            <Setter Target="Root.Background" Value="{ThemeResource ControlFillColorDisabledBrush}"/>
                                            <Setter Target="ContentPresenter.Foreground" Value="{ThemeResource TextFillColorDisabledBrush}"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 分段按钮样式 -->
        <Style x:Key="VS_SegmentButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="{StaticResource VS_SegmentButtonSize}"/>
            <Setter Property="Height" Value="{StaticResource VS_SegmentButtonSize}"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="UseSystemFocusVisuals" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid Background="Transparent">
                            <ContentPresenter x:Name="ContentPresenter"
                                              Content="{TemplateBinding Content}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Padding="{TemplateBinding Padding}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 中性容器样式：去掉主题色 Hover/Pressed/Selected -->
        <Style x:Key="TileListViewItemStyle"
               TargetType="ListViewItem"
               BasedOn="{StaticResource DefaultListViewItemStyle}">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <ListViewItemPresenter
                            Content="{TemplateBinding Content}"
                            ContentTemplate="{TemplateBinding ContentTemplate}"
                            HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                            CornerRadius="8"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            PointerOverBackground="Transparent"
                            PressedBackground="Transparent"
                            SelectedBackground="Transparent"
                            SelectedPointerOverBackground="Transparent"
                            SelectedPressedBackground="Transparent"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GridListViewItemStyle"
               TargetType="ListViewItem"
               BasedOn="{StaticResource TileListViewItemStyle}">
            <!-- 两种模式都统一 6px 外间距 -->
            <Setter Property="Margin" Value="4"/>
        </Style>

        <!-- 列表视图模板 -->
        <DataTemplate x:Key="ListItemTemplate" x:DataType="models:FavoriteItem">
            <Grid Padding="8" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Spacing="4">
                    <TextBlock Text="{x:Bind Term}" FontSize="18"/>
                    <TextBlock Text="{x:Bind AddedOn, Mode=OneWay}" Opacity="0.6"/>
                </StackPanel>

                <Button Grid.Column="1"
          Content="删除"
          Style="{StaticResource DangerButtonStyle}"
          Margin="12,0,0,0"
          Click="DeleteButton_Click"/>
            </Grid>
        </DataTemplate>

        <!-- 磁贴模式 -->
        <ItemsPanelTemplate x:Key="TileItemsPanel">
            <ItemsWrapGrid Orientation="Horizontal"
                   HorizontalAlignment="Center"
                   ItemWidth="240"
                   ItemHeight="92"/>
        </ItemsPanelTemplate>

        <DataTemplate x:Key="TileItemTemplate" x:DataType="models:FavoriteItem">
            <Border Width="240" Height="92"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8"
            Padding="12"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="4">
                        <TextBlock Text="{x:Bind Term}"
               FontSize="16"
               FontWeight="SemiBold"
               TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{x:Bind AddedOn}"
               FontSize="12"
               Opacity="0.6"/>
                    </StackPanel>

                    <Button Grid.Column="1"
          Content="删除"
          Style="{StaticResource DangerButtonStyle}"
          VerticalAlignment="Center"
          Margin="8,0,0,0"
          Click="DeleteButton_Click"/>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- 网格模式 -->
        <ItemsPanelTemplate x:Key="GridItemsPanel">
            <ItemsWrapGrid Orientation="Horizontal"
                   HorizontalAlignment="Center"
                   ItemWidth="208"
                ItemHeight="180"/>
        </ItemsPanelTemplate>

        <DataTemplate x:Key="GridItemTemplate" x:DataType="models:FavoriteItem">
            <Border Width="200" Height="180"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8"
            Padding="12"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="2,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0"
              VerticalAlignment="Center"
              HorizontalAlignment="Center"
              Spacing="8">
                        <TextBlock Text="{x:Bind Term}"
               FontSize="18"
               FontWeight="SemiBold"
               TextAlignment="Center"
               TextWrapping="Wrap"/>
                        <TextBlock Text="{x:Bind AddedOn}"
               FontSize="12"
               Opacity="0.6"
               TextAlignment="Center"/>
                    </StackPanel>

                    <Button Grid.Row="1"
          Content="删除"
          Style="{StaticResource DangerButtonStyle}"
          HorizontalAlignment="Center"
          Margin="0,8,0,0"
          Click="DeleteButton_Click"/>
                </Grid>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid>
            <Grid.Padding>16</Grid.Padding>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 工具栏 -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                <!-- 排序 -->
                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <TextBlock Text="排序依据⇅" VerticalAlignment="Center" Foreground="Gray" FontSize="12"/>
                    <ComboBox x:Name="SortSelector"
                              Width="155"
                              VerticalAlignment="Center"
                              SelectionChanged="SortSelector_SelectionChanged">
                        <ComboBoxItem Content="名称 (A 到 Z)" Tag="NameAsc" IsSelected="True"/>
                        <ComboBoxItem Content="名称 (Z 到 A)" Tag="NameDesc"/>
                        <ComboBoxItem Content="时间（最新优先）" Tag="DateNewest"/>
                        <ComboBoxItem Content="时间（最旧优先）" Tag="DateOldest"/>
                    </ComboBox>
                </StackPanel>

                <!-- 视图切换按钮组 -->
                <Border x:Name="ViewSwitcherHost"
                        Height="{StaticResource VS_SegmentButtonSize}"
                        Background="{ThemeResource LayerFillColorDefaultBrush}"
                        CornerRadius="8"
                        BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                        BorderThickness="1">
                    <Grid x:Name="ViewSwitcherRoot">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 指示条 -->
                        <Rectangle x:Name="Indicator"
                                   Width="20"
                                   Height="2"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Bottom"
                                   IsHitTestVisible="False"
                                   Fill="{ThemeResource AccentFillColorDefaultBrush}"
                                   RadiusX="1" RadiusY="1">
                            <Rectangle.RenderTransform>
                                <TranslateTransform x:Name="IndicatorTranslate"/>
                            </Rectangle.RenderTransform>
                        </Rectangle>

                        <!-- 列表 -->
                        <ToggleButton x:Name="ListBtn"
                                      Grid.Column="0"
                                      Style="{StaticResource VS_SegmentButtonStyle}"
                                      ToolTipService.ToolTip="列表视图"
                                      UseSystemFocusVisuals="False"
                                      Click="ListBtn_Click">
                            <FontIcon Glyph="&#xE179;"/>
                        </ToggleButton>

                        <!-- 网格 -->
                        <ToggleButton x:Name="GridBtn"
                                      Grid.Column="1"
                                      Style="{StaticResource VS_SegmentButtonStyle}"
                                      ToolTipService.ToolTip="网格视图"
                                      UseSystemFocusVisuals="False"
                                      Click="GridBtn_Click">
                            <FontIcon Glyph="&#xE80A;"/>
                        </ToggleButton>

                        <!-- 磁贴 -->
                        <ToggleButton x:Name="TileBtn"
                                      Grid.Column="2"
                                      Style="{StaticResource VS_SegmentButtonStyle}"
                                      ToolTipService.ToolTip="磁贴视图"
                                      UseSystemFocusVisuals="False"
                                      Click="TileBtn_Click">
                            <FontIcon Glyph="&#xECA5;"/>
                        </ToggleButton>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- 空数据提示 -->
            <TextBlock Grid.Row="1"
                       Text="快来收藏词汇"
                       FontSize="18"
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="{x:Bind Favorites.Count, Mode=OneWay,
                                    Converter={StaticResource ZeroToVisibilityConverter}}"/>

            <!-- 列表主体 -->
            <ListView x:Name="List"
                      Grid.Row="1"
                      x:FieldModifier="public"
                      ItemsSource="{x:Bind Favorites, Mode=OneWay}"
                      ItemTemplate="{StaticResource ListItemTemplate}"
                      IsItemClickEnabled="True"
                      ItemClick="List_ItemClick"
                      SelectionMode="None"
                      HorizontalContentAlignment="Stretch"
                      Visibility="{x:Bind Favorites.Count, Mode=OneWay,
                                   Converter={StaticResource GreaterThanZeroToVisibilityConverter}}"/>
        </Grid>
    </Grid>
</Page>